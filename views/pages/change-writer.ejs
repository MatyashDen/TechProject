<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/header.ejs %>
    <link rel="stylesheet" href="/stylesheets/load-page.css">
    <link rel="stylesheet" href="/stylesheets/cropper.css">
    <link rel="stylesheet" href="/stylesheets/crop-page.css">

    <link rel='stylesheet' href='/stylesheets/add-book.css' type='text/css'>
    <style>
      #nav-writers {
        color: white;
        font-weight: 600;
      }
    </style>
  </head>
  <body>
    <% include ../partials/nav.ejs %>
    <% include ../partials/crop-image.ejs %>
    <% include ../partials/load-page.ejs %>
    <% 
      let pictureUrl = "/favicons/no-image.svg";
        if (writer.pictureUrl !== "")
          pictureUrl = writer.pictureUrl;
    %>
    <div class="cmn-row">
      <div class="cmn-head">
        <span class="cmn-headline">Редагувати письменника</span>
      </div>
      <div class="flex-wrapper start">
        <div class="dish-picture">   
          <img src="<%= pictureUrl %>" id="img">
          <input type="file" accept="image/*" id="add-image" style="display: none;"> 
          <button class="cmn-button  cmn-button-center" id="dish-select-photo" onclick="document.getElementById('add-image').click()">Виберiть фото</button>
        </div>

        <div class="dish-info">
          <div class="cmn-input-group">
            <input type="text" class="cmn-input" id="name" value="<%= writer.name %>" autocomplete="off" required>
            <label class="cmn-input-label">П.I.Б. письменника</label>
            <span class="cmn-input-highlight"></span>
          </div>
          <div class="flex-wrapper">
            <div class="cmn-input-group w45">
              <input type="date" class="cmn-input" id="born-date" value="<%= writer.bornDate %>"autocomplete="off" required>
              <label class="cmn-input-label">Дата народження</label>
              <span class="cmn-input-highlight"></span>
            </div>
            <div class="cmn-input-group w45">
              <input type="date" class="cmn-input" id="death-date" value="<%= writer.deathDate %>" autocomplete="off" required>
              <label class="cmn-input-label">Дата смертi</label>
              <span class="cmn-input-highlight"></span>
            </div>
          </div>
          <div class="dish-title cmn-text">Бiографiя або цiкавi факти</div>
          <textarea class="cmn-textarea" id="description" required><%= writer.description %></textarea>
        </div>
      </div>
    </div>
    <div class="cmn-popup cmn-ppp-error" id="message-box">
      <span class="cmn-text"></span>
    </div>
    <button class="cmn-button cmn-button-center cmn-button-big" id="change-writer">Редагувати</button>

    <script src="/scripts/cropper.js"></script>
    <script src="/scripts/message.js"></script>
    <script src="/scripts/crop-image.js"></script>

    <script src="/scripts/change-writer.js"></script>
  </body>
</html>